    <script>
        const input = document.getElementById('bookingDate');
        const dt = new Date();
        const day = ("0" + dt.getDate()).slice(-2);
        const month = ("0" + (dt.getMonth() + 1)).slice(-2);
        const date = dt.getFullYear() + "-" + month + "-" + day;
        input.value = date

        function total() {
        // Récupérer les valeurs de coût et quantité
        const cost = parseFloat(document.getElementById('cost').value) || 0;
        const qty = parseInt(document.getElementById('ticketQty').value, 10) || 0;

        // Calculer le total
        const prix_total = cost * qty;

        // Mettre à jour l'affichage du total
        document.getElementById('total-ptp').innerText = prix_total.toFixed(2); // Afficher avec deux décimales

        // Mettre à jour le champ caché pour le total
        document.getElementById('total-ptpp').value = prix_total.toFixed(2); // Afficher avec deux décimales
    }

    // Ajouter un écouteur d'événement pour mettre à jour le total au changement de la quantité
    document.addEventListener('DOMContentLoaded', function() {
        // Initialiser le total au chargement de la page
        total(); 
        
        // Assurez-vous que la fonction est appelée lorsque la quantité change
        document.getElementById('ticketQty').addEventListener('input', total);
    });
    </script>
